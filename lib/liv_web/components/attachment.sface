<li>
    <div :if={@url == ""} id={"attachment-#{@name}"}
	 class="progress-box">
	<div class="progress"
	     style={"width:#{percentage(@offset, @size)}%"}/>
    </div>
    <a :if={@url != ""} id={"attachment-#{@name}"}
       class="attachment-download"
       href={@url} target="_blank" download={@name}>
	{@name}
    </a>
</li>
